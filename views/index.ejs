<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Simulador ESP8266 - MHUTEMP</title>
    <style>
        body {
            font-family: sans-serif;
            background: #f4f4f4;
            padding: 2rem;
            display: flex;
            justify-content: center;
        }

        .container {
            width: 100%;
            max-width: 640px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        form, .device {
            background: white;
            padding: 1.5rem;
            border-radius: 10px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

        label {
            font-weight: bold;
            margin-top: 0.5rem;
            display: block;
        }

        input[type="number"],
        input[type="text"] {
            width: 100%;
            padding: 0.5rem;
            margin-top: 0.25rem;
            margin-bottom: 0.75rem;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        input[type="checkbox"] {
            margin-top: 0.5rem;
        }

        button {
            padding: 0.5rem 1.5rem;
            margin-top: 1rem;
            border: none;
            border-radius: 5px;
            background-color: #4CAF50;
            color: white;
            font-weight: bold;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        .device {
            border-left: 6px solid #4CAF50;
        }

        .actions {
            margin-top: 0.5rem;
        }

        .actions form {
            display: inline;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>üîß Simulador de dispositivos ESP8266 - MHUTEMP</h1>

    <form action="/add" method="POST">
        <h2>‚ûï Crear nuevo dispositivo simulado</h2>

        <label>Username:</label>
        <input type="text" name="username" required>

        <div id="rangeFields">
            <label>Temperatura m√≠nima (Temp.OUT):</label>
            <input type="number" step="0.01" name="minDsT" required>

            <label>Temperatura m√°xima (Temp.OUT):</label>
            <input type="number" step="0.01" name="maxDsT" required>

            <label>Temperatura m√≠nima (Temp.IN):</label>
            <input type="number" step="0.01" name="minT" required>

            <label>Temperatura m√°xima (Temp.IN):</label>
            <input type="number" step="0.01" name="maxT" required>

            <label>Humedad m√≠nima (Hum.IN):</label>
            <input type="number" step="0.01" name="minH" required>

            <label>Humedad m√°xima (Hum.IN):</label>
            <input type="number" step="0.01" name="maxH" required>
        </div>

        <label><input type="checkbox" name="fixed" id="fixedMode"> Modo fijo</label>

        <div id="fixedFields" style="display:none;">
            <label>Temperatura fija (Temp.OUT):</label>
            <input type="number" step="0.01" name="dsTemperature" value="24.5">

            <label>Temperatura fija (Temp.IN):</label>
            <input type="number" step="0.01" name="temperature" value="25">

            <label>Humedad fija (Hum.IN):</label>
            <input type="number" step="0.01" name="humidity" value="50">
        </div>

        <label>Intervalo de simulaci√≥n (ms):</label>
        <input type="number" name="interval" value="2000" required>

        <button type="submit">Iniciar simulaci√≥n</button>
    </form>

    <h2>üìã Dispositivos simulados</h2>

    <% if (devices.length === 0) { %>
        <p>No hay dispositivos simulados actualmente.</p>
    <% } else { %>
        <% devices.forEach(device => { %>
            <div class="device">
                <strong><%= device.username %></strong><br>
                <span><%= device.running ? 'üü¢ Enviando datos' : '‚õî Detenido' %></span><br>
                Intervalo: <%= device.interval %> ms<br>

                <% if (device.fixed) { %>
                    üå°Ô∏è Temp.OUT: <%= device.dsTemperature %> ¬∞C<br>
                    üå°Ô∏è Temp.IN: <%= device.temperature %> ¬∞C<br>
                    üíß Hum.IN: <%= device.humidity %> %<br>
                <% } else { %>
                    üå°Ô∏è Temp.OUT: <%= device.minDsT %>‚Äì<%= device.maxDsT %> ¬∞C<br>
                    üå°Ô∏è Temp.IN: <%= device.minT %>‚Äì<%= device.maxT %> ¬∞C<br>
                    üíß Hum.IN: <%= device.minH %>‚Äì<%= device.maxH %> %<br>
                <% } %>

                <div class="actions">
                    <form action="/stop/<%= device.id %>" method="POST">
                        <button type="submit">Detener</button>
                    </form>
                    <form action="/delete/<%= device.id %>" method="POST" onsubmit="return confirm('¬øEliminar este dispositivo?')">
                        <button type="submit">Eliminar</button>
                    </form>
                </div>
            </div>
        <% }); %>
    <% } %>
</div>

<script>
    const fixedCheckbox = document.getElementById('fixedMode');
    const fixedFields = document.getElementById('fixedFields');
    const rangeFields = document.getElementById('rangeFields');

    const requiredRangeInputs = rangeFields.querySelectorAll('input');

    function toggleFields() {
        if (fixedCheckbox.checked) {
            fixedFields.style.display = 'block';
            rangeFields.style.display = 'none';
            requiredRangeInputs.forEach(input => input.removeAttribute('required'));
        } else {
            fixedFields.style.display = 'none';
            rangeFields.style.display = 'block';
            requiredRangeInputs.forEach(input => input.setAttribute('required', 'required'));
        }
    }

    fixedCheckbox.addEventListener('change', toggleFields);
    toggleFields(); // ejecuta al cargar
</script>
</body>
</html>
