<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Edit Simulated Device - MHUTEMP</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        body {
            font-family: sans-serif;
            background: #f4f4f4;
            padding: 2rem;
            display: flex;
            justify-content: center;
        }

        .container {
            width: 100%;
            max-width: 640px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        form {
            background: white;
            padding: 1.5rem;
            border-radius: 10px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        label {
            font-weight: bold;
            margin-top: 0.5rem;
            display: block;
        }

        input[type="number"],
        input[type="text"] {
            width: 100%;
            padding: 0.5rem;
            margin-top: 0.25rem;
            margin-bottom: 0.75rem;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        input[type="checkbox"] {
            margin-top: 0.5rem;
        }

        .button-group {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            margin-top: 1rem;
        }

        .button-group button,
        .button-group a button {
            padding: 0.5rem 1.5rem;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            cursor: pointer;
        }

        .button-group button[type="submit"] {
            background-color: #007bff;
            color: white;
        }

        .button-group a button {
            background-color: #ccc;
            color: #333;
        }

        .button-group button:hover {
            opacity: 0.9;
        }

        @media (max-width: 480px) {
            body {
                padding: 1rem;
            }

            form {
                padding: 1rem;
            }

            .button-group {
                flex-direction: column;
            }

            .button-group button {
                width: 100%;
            }
        }
    </style>
</head>
<body>
<div class="container">
    <h1>✏️ Edit Simulated Device</h1>
    <form action="/update/<%= device.id %>" method="POST">
        <label>Username:</label>
        <input type="text" name="username" value="<%= device.username %>" required>

        <div id="rangeFields">
            <label>Min Temp (Temp.OUT):</label>
            <input type="number" step="0.01" name="minDsT" value="<%= device.minDsT %>" required>

            <label>Max Temp (Temp.OUT):</label>
            <input type="number" step="0.01" name="maxDsT" value="<%= device.maxDsT %>" required>

            <label>Min Temp (Temp.IN):</label>
            <input type="number" step="0.01" name="minT" value="<%= device.minT %>" required>

            <label>Max Temp (Temp.IN):</label>
            <input type="number" step="0.01" name="maxT" value="<%= device.maxT %>" required>

            <label>Min Humidity (Hum.IN):</label>
            <input type="number" step="0.01" name="minH" value="<%= device.minH %>" required>

            <label>Max Humidity (Hum.IN):</label>
            <input type="number" step="0.01" name="maxH" value="<%= device.maxH %>" required>
        </div>

        <label>
            <input type="checkbox" name="fixed" id="fixedMode" <%= device.fixed ? 'checked' : '' %>> Fixed mode
        </label>

        <div id="fixedFields" style="display:none;">
            <label>Fixed Temp (Temp.OUT):</label>
            <input type="number" step="0.01" name="dsTemperature" value="<%= device.dsTemperature %>">

            <label>Fixed Temp (Temp.IN):</label>
            <input type="number" step="0.01" name="temperature" value="<%= device.temperature %>">

            <label>Fixed Humidity (Hum.IN):</label>
            <input type="number" step="0.01" name="humidity" value="<%= device.humidity %>">
        </div>

        <label>Simulation Interval (ms):</label>
        <input type="number" name="interval" value="<%= device.interval %>" required>

        <div class="button-group">
            <button type="submit">Save Changes</button>
            <a href="/"><button type="button">Cancel</button></a>
        </div>
    </form>
</div>

<script>
    const fixedCheckbox = document.getElementById('fixedMode');
    const fixedFields = document.getElementById('fixedFields');
    const rangeFields = document.getElementById('rangeFields');
    const requiredRangeInputs = rangeFields.querySelectorAll('input');

    function toggleFields() {
        if (fixedCheckbox.checked) {
            fixedFields.style.display = 'block';
            rangeFields.style.display = 'none';
            requiredRangeInputs.forEach(input => input.removeAttribute('required'));
        } else {
            fixedFields.style.display = 'none';
            rangeFields.style.display = 'block';
            requiredRangeInputs.forEach(input => input.setAttribute('required', 'required'));
        }
    }

    fixedCheckbox.addEventListener('change', toggleFields);
    toggleFields(); // run on load
</script>
</body>
</html>
